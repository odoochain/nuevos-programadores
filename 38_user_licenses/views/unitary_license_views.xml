<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
    <data>
    <record id="view_form_unitary_license" model="ir.ui.view">
         <field name="name">view.form.unitary.license</field>
         <field name="model">unitary.license</field>
         <field name="arch" type="xml">
            <form string="unitary License">
              <header>
                    <!-- <button name="load_licence" string="Load licence" class="oe_highlight" type="object"/> -->
              </header>
              <sheet>

                  <div class="oe_title">
                           <h1>
                               <field name="name" readonly="1"/>
                           </h1>
                        </div>
                  <group>
                      <group>
                          <field name="partner_id" />
                          <field name="_id" />
                          <field name="type" />
                          <field name="total_uses" />
                          <field name="used" />
                          <field name="date" />

                       </group>
                  </group>
               </sheet>
                <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                            <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_unitary_license" model="ir.ui.view">
         <field name="name">view.tree.unitary.license</field>
         <field name="model">unitary.license</field>
         <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id" />
                <field name="type" />
                <field name="total_uses" />
                <field name="used" />
                <field name="date" />
            </tree>
        </field>
    </record>

    <record id="action_unitary_license" model="ir.actions.act_window">
        <field name="name">Unitary License</field>
        <field name="res_model">unitary.license</field>
        <field name="view_id" ref="view_tree_unitary_license"/>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            create a new record</p>
       </field>
    </record>

    </data>
</odoo>